<Page x:Class="GUIClient.Mensaje"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUIClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Mensaje">

    <Grid>
        <StackPanel>
            <ListView x:Name="mensajes" Background="AliceBlue">

            </ListView>
        </StackPanel>
        

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Mensaje: " Margin="10"/>
            <TextBox Width="200" Margin="10" Name="mensaje"/>
            <Button Content="Enviar" Margin="10" Width="50" Click="EnviarMensaje"/>
        </StackPanel>
    </Grid>
</Page>
